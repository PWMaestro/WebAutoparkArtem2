@using DataAccessLayer.Entities
@model Vehicle
@{
    ViewData["Title"] = "WAuto | DETAILS";
}

<a asp-controller="Vehicle" asp-action="Index">Back</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Model name</th>
            <th scope="col">Vehicle type</th>
            <th scope="col">Tax coeff.</th>
            <th scope="col">Engine volume</th>
            <th scope="col">Year</th>
            <th scope="col">Reg. number</th>
            <th scope="col">Color</th>
            <th scope="col">Tax rer month</th>
            <th scope="col">Max distance (km)</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>@Model.VehicleId</td>
            <td>@Model.ModelName</td>
            <td>@Model.VehicleType.TypeName</td>
            <td>@Model.VehicleType.TaxCoeff</td>
            <td>@Model.EngineCapacity</td>
            <td>@Model.ManufactureYear</td>
            <td>@Model.RegistrationNumber</td>
            <td>@Model.Color</td>
            <td>@Model.TaxPerMonth.ToString("0.00")</td>
            <td>@Model.MaxKm.ToString("0.00")</td>
        </tr>
    </tbody>
</table>